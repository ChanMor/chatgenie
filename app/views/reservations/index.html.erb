<div style="max-width: 800px; margin: 2rem auto; padding: 2rem; background-color: #fff; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
  <div style="display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #e5e7eb; padding-bottom: 1rem; margin-bottom: 1rem;">
    <h1 style="font-size: 1.875rem; font-weight: 700;">My Upcoming Reservations</h1>
    <%= link_to "Make a New Reservation", new_reservation_path, style: "background-color: #4f46e5; color: white; padding: 0.5rem 1rem; border-radius: 0.375rem; text-decoration: none;" %>
  </div>

  <table style="width: 100%; text-align: left;">
    <thead>
      <tr>
        <th style="padding: 0.5rem;">Date & Time</th>
        <th style="padding: 0.5rem;">Table</th>
        <th style="padding: 0.5rem;">Party Size</th>
        <th style="padding: 0.5rem;">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr style="border-bottom: 1px solid #e5e7eb;">
          <td style="padding: 0.5rem;"><%= reservation.reservation_time.strftime("%A, %b %d at %l:%M %p") %></td>
          <td style="padding: 0.5rem;"><%= reservation.table.name %></td>
          <td style="padding: 0.5rem;"><%= reservation.party_size %></td>
          <td style="padding: 0.5rem;">
            <% if reservation.reservation_time > Time.current + 2.hours %>
              <%= link_to "Cancel", reservation_path(reservation), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, style: "color: #ef4444; text-decoration: none;" %>
            <% else %>
              <span style="color: #9ca3af;">Cannot cancel</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>