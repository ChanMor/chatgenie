<div style="max-width: 600px; margin: 2rem auto; padding: 2rem; background-color: #fff; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
  <h1 style="font-size: 1.875rem; font-weight: 700; margin-bottom: 1rem;">Make a Reservation</h1>
  
  <%# Display errors from the controller %>
  <% if flash.now[:alert] %>
    <div style="color: red; margin-bottom: 1rem;"><%= flash.now[:alert] %></div>
  <% end %>

  <%= form_with(model: @reservation, url: reservations_path) do |form| %>
    <% if @reservation.errors.any? %>
      <div style="color: red; margin-bottom: 1rem;">
        <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation:</h2>
        <ul>
          <% @reservation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 1.5rem;">
      <%= form.label :party_size, style: "display: block; font-weight: 500;" %>
      <%= form.number_field :party_size, in: 1..10, style: "width: 100%; border: 1px solid #d1d5db; border-radius: 0.375rem; padding: 0.5rem;" %>
    </div>

    <div style="margin-bottom: 1.5rem;">
      <%= form.label :reservation_time, "Date and Time", style: "display: block; font-weight: 500;" %>
      <%= form.select :reservation_time, 
            options_for_select(@available_slots.map { |s| [s.strftime("%A, %b %d at %l:%M %p"), s] }), 
            {}, 
            { style: "width: 100%; border: 1px solid #d1d5db; border-radius: 0.375rem; padding: 0.5rem;" } %>
    </div>
    
    <div>
      <%= form.submit "Book Reservation", style: "background-color: #4f46e5; color: white; padding: 0.5rem 1rem; border-radius: 0.375rem; cursor: pointer; border: none;" %>
    </div>
  <% end %>
</div>