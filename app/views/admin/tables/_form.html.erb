<%= form_with(model: [:admin, table], style: "margin-top: 1.5rem;") do |form| %>
  <% if table.errors.any? %>
    <div style="color: red; margin-bottom: 1rem;">
      <h2><%= pluralize(table.errors.count, "error") %> prohibited this table from being saved:</h2>
      <ul>
        <% table.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 1.5rem;">
    <%= form.label :name, style: "display: block; font-weight: 500;" %>
    <%= form.text_field :name, style: "width: 100%; border: 1px solid #d1d5db; border-radius: 0.375rem; padding: 0.5rem;" %>
  </div>

  <div style="margin-bottom: 1.5rem;">
    <%= form.label :capacity, style: "display: block; font-weight: 500;" %>
    <%= form.number_field :capacity, style: "width: 100%; border: 1px solid #d1d5db; border-radius: 0.375rem; padding: 0.5rem;" %>
  </div>

  <div>
    <%= form.submit style: "background-color: #4f46e5; color: white; padding: 0.5rem 1rem; border-radius: 0.375rem; cursor: pointer; border: none;" %>
  </div>
<% end %>